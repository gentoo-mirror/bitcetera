start() {
	ebegin "Starting heyu"
	mkdir /var/tmp/heyu 2>/dev/null
	chmod a=rwx /var/tmp/heyu
	heyu stop
	sleep 1
	killall heyu 2>/dev/null
	sleep 1
	start-stop-daemon --start --quiet --exec /usr/bin/heyu -- engine
	eend $?
}

stop() {
	ebegin "Stopping heyu"
	start-stop-daemon --stop --quiet --exec /usr/bin/heyu
	eend $?
}
